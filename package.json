{
  "name": "dicom-toolkit",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite -c vite.site.config.ts",
    "build": "vite build -c vite.config.ts",
    "build:site": "vite build -c vite.site.config.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier -c .",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "mutation:quick": "stryker run --mutate 'src/**/*.ts' --timeoutFactor 1.5 --concurrency 24 --testRunner vitest --fileLogLevel error",
    "mutation": "stryker run",
    "check:reqs": "node tools/check_requirements.mjs"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings 0"
    ]
  },
  "dependencies": {
    "dcmjs": "^0.45.0",
    "jszip": "^3.10.1",
    "zod": "^4.1.10"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@stryker-mutator/core": "^9.1.1",
    "@stryker-mutator/typescript-checker": "^9.1.1",
    "@stryker-mutator/vitest-runner": "^9.1.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.2",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "fast-check": "^4.3.0",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.6",
    "vitest": "^3.2.4"
  }
}
