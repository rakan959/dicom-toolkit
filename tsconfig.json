{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "vitest/globals",
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@core/*": [
                "src/core/*"
            ],
            "@adapters/*": [
                "adapters/*"
            ],
            "@ui/*": [
                "src/ui/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@src/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "tests",
        "tools",
        "adapters",
        "vite.config.ts",
        "types.d.ts"
    ]
}